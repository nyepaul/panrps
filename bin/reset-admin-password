#!/usr/bin/env python3
"""
Reset admin password.

Usage:
  ./bin/reset-admin-password <new_password> [--force]

Example:
  ./bin/reset-admin-password "MyNewSecurePassword123"
  ./bin/reset-admin-password "MyNewSecurePassword123" --force  # Skip confirmation

Use --force to skip confirmation when user has encrypted data (data will be lost)
"""

import sys
import os
import sqlite3

# Add parent directory to path
parent_dir = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
sys.path.insert(0, parent_dir)

try:
    import bcrypt
except ImportError:
    print("‚ùå Error: bcrypt module not found")
    print("Please install bcrypt: pip3 install bcrypt --user")
    sys.exit(1)

def main():
    db_path = os.path.join(parent_dir, 'data', 'planning.db')
    username = 'admin'

    # Check if database exists
    if not os.path.exists(db_path):
        print(f"‚ùå Database not found at: {db_path}")
        print("Please ensure the application has been initialized.")
        sys.exit(1)

    # Parse arguments
    if len(sys.argv) < 2:
        print("Usage: ./bin/reset-admin-password <new_password> [--force]")
        print("\nExample:")
        print('  ./bin/reset-admin-password "MyNewSecurePassword123"')
        print('  ./bin/reset-admin-password "MyNewSecurePassword123" --force')
        print("\n‚ö†Ô∏è  Password requirements:")
        print("  - At least 8 characters")
        print("\n‚ö†Ô∏è  Use --force to skip confirmation (accepts data loss)")
        sys.exit(1)

    new_password = sys.argv[1]
    force = '--force' in sys.argv

    # Validate password
    if len(new_password) < 8:
        print("‚ùå Password must be at least 8 characters!")
        sys.exit(1)

    try:
        # Connect to database
        conn = sqlite3.connect(db_path)
        cursor = conn.cursor()

        # Check if admin user exists and has encrypted data
        cursor.execute('SELECT id, username, is_active, encrypted_dek, dek_iv FROM users WHERE username = ?', (username,))
        user = cursor.fetchone()

        if not user:
            print(f'‚ùå User "{username}" not found')
            print('Please create an admin user first using: ./bin/create-admin-account')
            conn.close()
            sys.exit(1)

        user_id, user_name, is_active, encrypted_dek, dek_iv = user
        has_encrypted_data = bool(encrypted_dek and dek_iv)

        print(f'Found user: {user_name} (ID: {user_id}, Active: {is_active})')

        # Warn if user has encrypted data
        if has_encrypted_data:
            print()
            print("‚ö†Ô∏è" * 30)
            print("‚ö†Ô∏è  CRITICAL WARNING: DATA LOSS!")
            print("‚ö†Ô∏è" * 30)
            print()
            print("This user has encrypted data protected by their password.")
            print("Resetting the password WITHOUT the old password will:")
            print("  ‚Ä¢ PERMANENTLY DELETE all encrypted profile data")
            print("  ‚Ä¢ Make financial data UNRECOVERABLE")
            print("  ‚Ä¢ This CANNOT be undone!")
            print()

            if not force:
                print("‚ùå Password reset cancelled!")
                print()
                print("To proceed with data loss, run:")
                print(f'  ./bin/reset-admin-password "{new_password}" --force')
                conn.close()
                sys.exit(1)
            else:
                print("üî¥ Proceeding with password reset (--force flag used)")
                print("   Encrypted data will be permanently deleted!")
                print()

        # Hash the password
        print('Hashing password...')
        password_hash = bcrypt.hashpw(new_password.encode('utf-8'), bcrypt.gensalt()).decode('utf-8')

        # Update password and clear DEK if needed
        print('Updating password...')
        if has_encrypted_data:
            # Clear encrypted DEK - data is now inaccessible
            cursor.execute(
                'UPDATE users SET password_hash = ?, encrypted_dek = NULL, dek_iv = NULL WHERE username = ?',
                (password_hash, username)
            )
            print('üóëÔ∏è  Encrypted data keys cleared (data now inaccessible)')
        else:
            cursor.execute('UPDATE users SET password_hash = ? WHERE username = ?', (password_hash, username))

        conn.commit()

        # Verify the update
        cursor.execute('SELECT password_hash FROM users WHERE username = ?', (username,))
        stored_hash = cursor.fetchone()[0]

        # Test password verification
        print('Verifying password...')
        if bcrypt.checkpw(new_password.encode('utf-8'), stored_hash.encode('utf-8')):
            print()
            print("=" * 60)
            print("‚úÖ Admin password reset successfully!")
            print("=" * 60)
            print()
            print("Credentials:")
            print(f"  Username: {username}")
            if has_encrypted_data:
                print()
                print("üî¥ WARNING: Encrypted data was permanently deleted!")
                print("   The user will need to re-enter all profile data.")
            print()
            print("=" * 60)
            print("‚ö†Ô∏è  IMPORTANT: Store your admin password securely!")
            print("=" * 60)
        else:
            print('‚ùå Password verification failed!')
            conn.close()
            sys.exit(1)

        conn.close()

    except Exception as e:
        print(f'‚ùå Error: {e}')
        import traceback
        traceback.print_exc()
        sys.exit(1)

if __name__ == '__main__':
    main()
